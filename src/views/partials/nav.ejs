<%
  const currentView = typeof current !== 'undefined' ? current : null;
  const navItems = [
    { id: 'info', label: 'info' },
    { id: 'runes', label: 'runes' },
    { id: 'tracks', label: 'tracks' },
    { id: 'links', label: 'links' }
  ];
  const aria = (id) => (currentView === id ? ' aria-current="page"' : '');
  const navHref = (id) => `?view=${id}`;
%>
<nav class="nav">
  <div class="nav-links">
    <% navItems.forEach((item) => { %>
      <a
        class="nav-button nav-link"
        href="<%= navHref(item.id) %>"
        data-nav-target="<%= item.id %>"<%- aria(item.id) %>
      ><%= item.label %></a>
    <% }); %>
  </div>
</nav>
